{
  "ReverseProxy": {
    "Routes": {
      "AuthApi": {
        "ClusterId": "authCluster",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        },
        "Order": 1
      },
      "BookApi": {
        "ClusterId": "bookApi",
        "Match": {
          "Path": "/api/{**catch-all}"
        },
        "Order": 2
      }
    },
    "Clusters": {
      "authCluster": {
        "Destinations": {
          "auth1": {
            "Address": "http://bookservice:8080/"
          }
        }
      },
      "bookApi": {
        "Destinations": {
          "book1": {
            "Address": "http://bookservice:8080/"
          }
        }
      }
    }
  },
  "Jwt": {
    "Issuer": "BookApi",
    "Audience": "BookApiClient",
    "SecretKey": "VeryStrongSecretKey12345VeryStrongSecretKey12345VeryStrongSecretKey12345"
  },
  "ZipkinSettings": {
    "Path": "http://zipkin:9411/api/v2/spans"
  }
}