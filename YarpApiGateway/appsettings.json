{
    "ReverseProxy": {
        "Routes": {
            "authApi": {
                "ClusterId": "authCluster",
                "Match": {
                    "Path": "/api/auth/{**catch-all}"
                },
                "Transforms": [
                    { "PathRemovePrefix": "/api" }
                ]
            },
            "bookApi": {
                "ClusterId": "bookCluster",
                "Match": {
                    "Path": "/api/{**catch-all}"
                },
                "Transforms": [
                    { "PathRemovePrefix": "/api" }
                ]
            },
            "workerApi": {
                "ClusterId": "workerCluster",
                "Match": {
                    "Path": "/worker/{**catch-all}"
                },
                "Transforms": [
                    { "PathRemovePrefix": "/api" }
                ]
            }
        },
        "Clusters": {
            "authCluster": {
                "Destinations": {
                    "auth1": {
                        "Address": "http://localhost:8080/"
                    }
                }
            },
            "bookCluster": {
                "Destinations": {
                    "book1": {
                        "Address": "http://localhost:8080/"
                    }
                }
            },
            "workerCluster": {
                "Destinations": {
                    "worker1": {
                        "Address": "http://localhost:80/"
                    }
                }
            }
        }
    },
    "Jwt": {
        "Issuer": "BookApi",
        "Audience": "BookApiClient",
        "SecretKey": "VeryStrongSecretKey12345VeryStrongSecretKey12345VeryStrongSecretKey12345"
    },
    "ZipkinSettings": {
        "Path": "http://zipkin:9411/api/v2/spans"
    }
}
